---
name: scrape-config-generator

consumes:
- name: nats
  type: nats

templates:
  bpm.yml.erb: config/bpm.yml
  scrape_ca.crt.erb: config/certs/scrape_ca.crt
  scrape.crt.erb: config/certs/scrape.crt
  scrape.key.erb: config/certs/scrape.key

packages:
- scrape-config-generator

properties:
  scrape_config_file_path:
    description: "The path to the generated scrape config file"
    default: /var/vcap/data/scrape-config-generator/scrape_configs.yml

  expiration_interval:
    description: "This interval determines how often scrape endpoints are expired"
    default: 15s

  config_ttl:
    description: "This determines how long a scrape config lives before being expired"
    default: 45s

  scrape.ca_cert:
    description: "TLS CA cert to use for scraping"
  scrape.cert:
    description: "TLS certificate to use for scraping"
  scrape.key:
    description: "TLS private key to use for scraping"

  metrics_port:
    description: "Port to host metrics endpoint"
    default: 15822