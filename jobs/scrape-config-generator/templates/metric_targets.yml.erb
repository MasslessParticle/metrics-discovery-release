<%
scrape_configs = [{
  "job_name" => "scrape_config_generator",
  "scheme" => "https",
  "dns_sd_configs" => [
    {
      "names" => ["q-s0.#{spec.name}.*.*.#{spec.dns_domain_name}"],
      "type" => "A",
      "port" => p('metrics.port'),
    },
  ],
  "relabel_configs" => [
    {
      "source_labels"=> ['__address__'], # always there (added by Prometheus)
      "target_label" => 'source_id',
      "replacement" => 'scrape_config_generator'
    },
    {
      "source_labels"=> ['__address__'], # always there (added by Prometheus)
      "target_label" => 'origin',
      "replacement" => 'loggregator_scrape_config_generator'
    }
  ],
  "tls_config" => {
    "server_name" => p('metrics.server_name'),
  }
}]
%>

<%= YAML.dump({"scrape_configs" => scrape_configs}) %>