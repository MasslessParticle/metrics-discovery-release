---
name: metrics-dynamic-registrar

consumes:
- name: nats
  type: nats

templates:
  bpm.yml.erb: config/bpm.yml

packages:
- metrics-discovery-registrar

properties:
  publish_interval:
    description: "Interval to publish routes"
    default: 15s
  routes_glob:
    description: "Files matching the glob are expected to contain routes to Prometheus metrics endpoints"
    default: "/var/vcap/jobs/**/config/metric_routes.yml"
  route_refresh_interval:
    description: "Interval to refresh the Prometheus endpoint routes"
    default: 15s
